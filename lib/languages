	BabelName        belarusian
	BabelOptFormat   \languageattribute{$lang$}{$opts$}
	PolyglossiaName  belarusian
	XindyName        belarusian
	QuoteStyle       french
	Encoding         cp1251
	FontEncoding	 T2A
	DateFormats      "dd MMMM yyyy|d MMM yyyy|d.M.yyyy"
	LangCode         be_BY
End

